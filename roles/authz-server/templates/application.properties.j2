# 6 months
oauthServer.accessTokenValiditySeconds = 15552000

# 12 months
oauthServer.refreshTokenValiditySeconds = 31104000

# approval must last as long as the refresh token (12 months)
oauthServer.approvalExpirySeconds = 31104000

api.lifecycle.username={{ authz_server_api_lifecycle_username }}
api.lifecycle.password={{ authz_server_api_lifecycle_password }}

confirmPage.logoUrl=/images/openconext_logo.png

confirmPage.appName={{ instance_name }}

spring.thymeleaf.mode=HTML5

logging.config=file://{{ authz_server_dir }}/logback.xml

spring.datasource.url=jdbc:mysql://{{ authzserver.db_host }}/{{ authzserver.db_name }}
spring.datasource.username={{ authzserver.db_user }}
spring.datasource.password={{ authzserver.db_password }}
spring.datasource.validationQuery=SELECT 1
spring.datasource.testWhileIdle=true
spring.datasource.testOnBorrow=true

server.port={{ springapp_tcpport }}
server.session.cookie.secure=true

# An empty value will be replaced with the default
server.server-header=no

errorPage.email={{ support_email }}
endpoints.enabled=false
endpoints.health.enabled=true
endpoints.info.enabled=true
