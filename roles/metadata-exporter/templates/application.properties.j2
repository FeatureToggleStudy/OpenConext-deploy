logging.config=file://{{ metadata_exporter_dir }}/logback.xml
server.port={{ springapp_tcpport }}
server.session.cookie.secure=true

# An empty value will be replaced with the default
server.server-header=no

spring.profiles.active=prod

spring.datasource.url=jdbc:mysql://{{ metadata_exporter.db_host }}/{{ metadata_exporter.db_name }}
spring.datasource.username={{ metadata_exporter.db_user }}
spring.datasource.password={{ metadata_exporter.db_password }}
spring.datasource.driverClassName=com.mysql.jdbc.Driver
spring.datasource.validationQuery=SELECT 1
spring.datasource.testWhileIdle=true
spring.datasource.testOnBorrow=true

flyway.enabled=false

metadata.refresh.minutes={{ metadata_exporter_refresh_minutes }}

client.username=metadata.client
client.password={{ manage_api_password }}

endpoints.enabled=false
endpoints.health.enabled=true
spring.mvc.favicon.enabled=false
endpoints.jmx.enabled=false

logging.level.me=DEBUG

